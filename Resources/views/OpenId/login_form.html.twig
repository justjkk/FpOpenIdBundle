<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
    <head>
    </head>
    <body>
        <p>Login with OpenId</p>

        <form action="/login_check" method="get">
            <div>
                {% if identifier_configured %}
                    <input type="hidden" name="openid_mode" value="verify" />
                {% else %}
                    <input type="text" name="openid_identifier" value="http://" />
                {% endif %}

                <input type="submit" value="Sign In" />
            </div>
        </form>
    </body>
</html>